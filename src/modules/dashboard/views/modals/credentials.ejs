<div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50" onclick="if(event.target === this) this.closest('div').remove()">
  <div class="bg-white rounded-lg shadow-lg max-w-md w-full p-6 space-y-4">
    <div class="flex items-center justify-between">
      <h2 class="text-lg font-semibold text-gray-900">Tenant Credentials</h2>
      <button onclick="this.closest('div').remove()" class="text-gray-400 hover:text-gray-600">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Tenant Name -->
    <div class="space-y-2">
      <label class="block text-sm font-medium text-gray-700">Tenant Name</label>
      <div class="px-3 py-2 bg-gray-50 rounded border border-gray-300 text-gray-900 text-sm">
        <%= tenantName %>
      </div>
    </div>

    <!-- Tenant ID -->
    <div class="space-y-2">
      <label class="block text-sm font-medium text-gray-700">Tenant ID</label>
      <div class="flex items-center gap-2">
        <code class="flex-1 px-3 py-2 bg-gray-100 rounded border border-gray-300 text-gray-600 font-mono text-xs break-all">
          <%= tenantId %>
        </code>
        <button onclick="copyToClipboard('<%= tenantId %>', this)" class="text-gray-400 hover:text-gray-600 p-2 rounded-md transition hover:bg-gray-100 flex-shrink-0" title="Copy to clipboard">
          <svg class="w-5 h-5 icon-copy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"></path>
          </svg>
          <svg class="w-5 h-5 icon-check hidden text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- API Key -->
    <div class="space-y-2">
      <label class="block text-sm font-medium text-gray-700">API Key</label>
      <div class="flex items-center gap-2">
        <code class="flex-1 px-3 py-2 bg-gray-100 rounded border border-gray-300 text-gray-600 font-mono text-xs break-all">
          <%= apiKey %>
        </code>
        <button onclick="copyToClipboard('<%= apiKey %>', this)" class="text-gray-400 hover:text-gray-600 p-2 rounded-md transition hover:bg-gray-100 flex-shrink-0" title="Copy to clipboard">
          <svg class="w-5 h-5 icon-copy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"></path>
          </svg>
          <svg class="w-5 h-5 icon-check hidden text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Refresh Key Button -->
    <div class="pt-2">
      <button class="w-full text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 text-center transition" hx-post="/tenants/<%= tenantId %>/refresh-key" hx-confirm="Are you sure? Old key will stop working immediately." onclick="this.closest('div').remove()">
        Regenerate API Key
      </button>
    </div>

    <p class="text-xs text-gray-500 text-center">Keep your API Key secure. Do not share it publicly.</p>
  </div>
</div>
